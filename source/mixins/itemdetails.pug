                    +span({'data-i18n':'Ammo Type'}).item-head-ammotype
                .div-removeqty
                    +number({name:'removeqty',class:'item-removeqty boxed',value:0})
                    +span({'data-i18n':'Remove Qty'}).item-head-removeqty
                .div-recoverperc
                    +number({name:'recoverperc',class:'item-recoverperc boxed',value:0})
                    +span({'data-i18n':'Recover %'}).item-head-recoverperc
                .div-notes
                    +adaptiveTextarea({name:'notes',class:'boxed'})
                    +span({'data-i18n':'Notes'}).item-head-notes
                .div-effects
                    +adaptiveTextarea({name:'effects',class:'boxed',spellcheck:'false'})
                    +span({'data-i18n':'Effects'}).item-head-effects
