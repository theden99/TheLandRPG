        .attacks-cost{
            width: 40px;
        }
        .attacks-costtype-head,
        .attacks-costtype{
            width: 60px;
        }
        .attacks-range-head,
        .attacks-range{
            width: 45px;
            text-align: center;
        }
        .attacks-effect-head,
        .attacks-effect{
