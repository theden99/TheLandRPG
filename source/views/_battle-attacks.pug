            text-align: center;
        }
        .attacks-amount-head,
        .attacks-amount{
            width: 70px;
            text-align: center;
        }
        .attacks-amounttype-head,
        .attacks-amounttype{
            width: 60px;
            text-align: center;
        }
        .attacks-duration-head,
        .attacks-duration{
            width: 65px;
            text-align: center;
        }
        .attacks-durationamount-head,
        .attacks-durationamount{
            width: 55px;
            text-align: center;
        }
        .attacks-durationtype-head,
        .attacks-durationtype{
            width: 60px;
            text-align: center;
        }
        .attacks-conditiontype-head,
        .attacks-conditiontype{
            width: 80px;
            text-align: center;
        }
        .attacks-radius-head,
        .attacks-radius{
            width: 50px;
            text-align: center;
        }
        .attacks-radiustype-head,
        .attacks-radiustype{
            width: 50px;
            text-align: center;
        }

        .attacks-roller-head,
        .attacks-name-head,
        .attacks-level-head,
        .attacks-magictype-head,
        .attacks-actiontype-head,
        .attacks-cost-head,
        .attacks-costtype-head,
        .attacks-range-head,
        .attacks-effect-head,
        .attacks-amount-head,
        .attacks-amounttype-head,
        .attacks-duration-head,
        .attacks-durationamount-head,
        .attacks-durationtype-head,
        .attacks-conditiontype-head,
        .attacks-radius-head,
        .attacks-radiustype-head {
            text-align: center;
            background-color: lightskyblue;
            font-weight: bold;
        }

        .div-attacks-details {
            display: grid;
            grid-template-columns: auto;
            grid-template-areas : 
                'desc'
            ;
            border: 1px solid var(--borderColor);
            .div-attacks-desc {
                grid-area: desc;
            }
        }
    } 
